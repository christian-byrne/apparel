{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop" : true,
    "baseUrl": "./",
      "paths": {
      "types": ["types"],
      "store": ["store"],
      "*": [
          "node_modules/*",
          "src/types/*" // this will make the typescript compiler find the type file
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}